<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0</TargetFrameworks>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <LangVersion>11</LangVersion>
        <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
        <SignAssembly>True</SignAssembly>
        <AssemblyName>System.Web.Extensions</AssemblyName>
        <DefineConstants>$(DefineConstants);WEB_EXTENSIONS_CODE;WebFormsCore</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <DebugType>portable</DebugType>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <DebugType>portable</DebugType>
    </PropertyGroup>

    <Import Project="..\..\lib\WebFormsCore.Build\netstandard2.0\EstrellasDeEsperanza.WebFormsCore.Build.targets" />

    <PropertyGroup>
        <StrongNamePublicKey></StrongNamePublicKey>
        <StrongNamePublicKeyToken>b03f5f7f11d50a3a</StrongNamePublicKeyToken>
    </PropertyGroup>

    <ItemGroup>
        <Compile Remove="Compilation\WCFModel\AsmxEndpointPickerExtension.cs" />
    </ItemGroup>

    <ItemGroup>
        <None Include="Compilation\WCFModel\AsmxEndpointPickerExtension.cs" />
    </ItemGroup>

    <ItemGroup Condition="$(TargetFramework) != 'net48'">
        <ProjectReference Include="..\WebFormsCore.Configuration\WebFormsCore.Configuration.csproj" />
        <ProjectReference Include="..\WebFormsCore.Web\WebFormsCore.Web.csproj" />
        <ProjectReference Include="..\WebFormsCore.Web.Services\WebFormsCore.Web.Services.csproj" />
        <ProjectReference Include="..\WebFormsCore.Web.ApplicationServices\WebFormsCore.Web.ApplicationServices.csproj" />
        <PackageReference Include="CoreWCF.Http" Version="1.5.2" />
        <PackageReference Include="CoreWCF.Primitives" Version="1.5.2" />
        <PackageReference Include="System.ServiceModel.Primitives" Version="8.0.0" />
    </ItemGroup>

    <ItemGroup Condition="$(TargetFramework) == 'net48'">
        <Reference Include="System.ServiceModel" />
        <Reference Include="System.ServiceModel.Activation" />
        <Reference Include="System.Configuration" />
        <Reference Include="System.Web" />
        <Reference Include="System.Web.ApplicationServices" />
        <Reference Include="System.Design" />
        <Reference Include="System.Web.Services" />
        <Reference Include="System.Windows.Forms" />
        <Reference Include="System.Data.Services.Client" />
        <Reference Include="System.Data.Services.Design" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Data.SqlClient" Version="5.2.1" />
      <PackageReference Include="System.Reflection.Emit" Version="4.7.0" />
    </ItemGroup>

    <Import Project="..\..\lib\WebFormsCore.Build\netstandard2.0\EstrellasDeEsperanza.WebFormsCore.Build.targets" />

    <PropertyGroup>
        <StrongNamePublicKey></StrongNamePublicKey>
        <StrongNamePublicKeyToken>31bf3856ad364e35</StrongNamePublicKeyToken>
    </PropertyGroup>

    <Target Name="ChangeAliasesOfNugetRefs" BeforeTargets="FindReferenceAssembliesForReferences;ResolveReferences">
        <ItemGroup>
            <ReferencePath Condition="'%(FileName)' == 'System.Web.Services.Description'">
                <Aliases>Core</Aliases>
            </ReferencePath>
        </ItemGroup>
    </Target>

</Project>
