        <PropertyGroup>
            <InputFile>AssemblyInfo.cs</InputFile>
            <OutputFile>AssemblyInfo.cs</OutputFile>
            <Lines>$([System.IO.File]::ReadAllText($(InputFile)).Replace('BuildDate("[^"]*")','</Lines>
